---
interface Props {
  norm: string;
  desc: string;
}

const { norm, desc } = Astro.props;
---

<div class="bg-spc-light/10 rounded-lg p-4 transition-all duration-300 hover:bg-spc-light/20 hover:transform hover:scale-105">
  <h3 class="text-xl font-bold text-spc-gold mb-2">{norm}</h3>
  <p class="text-sm text-spc-light/80">{desc}</p>
</div>
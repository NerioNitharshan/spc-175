---
import "@fontsource/space-mono/700.css";
import "@fontsource/space-grotesk/700.css";
import "@fontsource/space-grotesk/400.css";

import PrimaryCTA from "@components/common/PrimaryCTA.astro";
import SecondaryCTA from "@components/common/SecondaryCTA.astro";
import { get_app_route } from "../../config/global";
---

<section
  class="font-serif font-bold leading-none text-spc-light/80 bg-spc-dark px-6 mb-12 md:hidden"
>
  <h2 class="text-4xl">celebrating</h2>
  <h1 class="font-mono text-[128px] text-spc-gold font-bold">175</h1>
  <h2 class="text-4xl">
    years of <span class="text-white">fide et labore.</span>
  </h2>

  <div class="mt-8 space-y-4">
    <PrimaryCTA text="how we feast it." url={get_app_route("175-timeline")} />
    <SecondaryCTA text="learn about our 175 years" url="/alma-mater/history-of-the-college" />
  </div>
</section>

<section class="hidden md:block md:px-12 xl:px-96">
  <div
    class="space-y-2 xl:space-y-0 xl:flex justify-between align-bottom xl:relative"
  >
    <h1
      class="w-4/5 leading-[90%] font-serif text-[48px] lg:text-[76px] bg-gradient-to-b from-spc-sea to-spc-gold inline-block text-transparent bg-clip-text"
    >
      St. Patrick's College celebrates 175 years of Fide et Labore
    </h1>

    <div class="mt-8 lg:mt-12 space-y-4 xl:absolute xl:bottom-0 xl:right-0">
      <PrimaryCTA text="how we feast it." url="/175-timeline" />
    </div>
  </div>
</section>

<section class="hidden md:block my-16 md:px-12 xl:px-36 rounded-md">
  <video muted autoplay width="100%" height="auto" loop>
    <source src="/alma-mater.mp4" type="video/mp4" />
  </video>
</section>

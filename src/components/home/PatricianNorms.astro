---
import "@fontsource/space-mono/700.css";
import "@fontsource/space-grotesk/700.css";
import "@fontsource/space-grotesk/400.css";
import PrimaryCTA from "@components/common/PrimaryCTA.astro";
import SecondaryCTA from "@components/common/SecondaryCTA.astro";
import PatricianNorm from "./PatricianNorm.astro";

const norms = [
  ["Motto", "Fide et Labore."],
  [
    "Mission",
    "Total commitment and optimum use of the resources to obtain the best quality in everyone.",
  ],
  ["Vision", "Pursuing Excellence in Education and Character."],
  ["Goal", "Transform the child into a unique personality."],
  [
    "Objective",
    "To make the child a well integrated person and an asset to the society.",
  ],
];
---

<section class="relative overflow-hidden py-20 md:py-32">
  <div class="absolute inset-0 opacity-10"></div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <div class="text-center md:text-left mb-10 md:mb-0 md:w-1/2">
        <h2 class="text-3xl md:text-4xl font-bold text-spc-light/90 mb-2">Embracing</h2>
        <h1 class="text-6xl md:text-7xl font-mono font-bold text-spc-gold mb-2">
          Patrician
        </h1>
        <h2 class="text-3xl md:text-4xl font-bold text-spc-light/90">
          Norms
        </h2>
        <p class="mt-4 text-lg text-spc-light/70 max-w-lg mx-auto md:mx-0">
          "Guiding principles that shape our educational journey and foster excellence in every Patrician."
        </p>
        <div class="mt-8 space-y-4 md:space-y-0 md:space-x-4 flex flex-col md:flex-row justify-center md:justify-start">
          <PrimaryCTA text="Learn more on alma mater" url="/" />
          <div class="hidden lg:hidden">
              <SecondaryCTA text="Learn more on alma mater" url="/" />
          </div>
      </div>
      </div>
      <div class="w-full md:w-1/2">
        <div class="bg-spc-dark/50 rounded-lg p-6 shadow-xl">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {norms.map((n) => <PatricianNorm norm={n[0]} desc={n[1]} />)}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255,255,255,.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>